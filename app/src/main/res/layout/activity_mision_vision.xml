<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.max.uniremington.MisionVision">

    <Button
        android:id="@+id/btnmision"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="93dp"
        android:layout_height="52dp"
        android:layout_marginTop="41dp"
        android:text="Mision"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.011"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="345dp"
        android:layout_height="218dp"
        android:layout_marginTop="103dp"
        android:text="Uniremington es una Institución de educación superior privada, profesionalizante, orientada a la docencia, que cumple en términos de alta calidad, con las funciones de docencia, investigación y extensión, con cobertura nacional y proyección internacional de programas académicos en las modalidades presencial, a distancia y virtual, en los diferentes niveles de educación superior para la formación integral de la persona sus competencias profesionales, visión global y valores éticos, morales, políticos, económicos, ambientales y culturales."
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnvision"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="303dp"
        android:text="Vision"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="354dp"
        android:layout_height="144dp"
        android:layout_marginTop="361dp"
        android:text="Uniremington en el año 2026 será una institución de educación superior con altos estándares de calidad en el desarrollo de programas académicos presenciales, virtuales y a distancia, con innovaciones pedagógicas, para que su oferta educativa sea pertinente, atractiva y flexible, comprometida con el desarrollo social, el medio ambiente y con proyección internacional."
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnatras"
        android:layout_width="57dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/iconoatras"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="152dp"
        android:layout_height="93dp"
        app:srcCompat="@drawable/funec"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />
</android.support.constraint.ConstraintLayout>
